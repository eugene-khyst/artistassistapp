const mat3 RGB_TO_LMS = mat3(0.4122214708, 0.2119034982, 0.0883024619, 0.5363325363, 0.6806995451, 0.2817188376, 0.0514459929, 0.1073969566, 0.6299787005);
const mat3 LMS_TO_OKLAB = mat3(0.2104542553, 1.9779984951, 0.0259040371, 0.793617785, -2.428592205, 0.7827717662, -0.0040720468, 0.4505937099, -0.8086757660);

vec3 rgbToOklab(vec3 rgb) {
  vec3 lms = RGB_TO_LMS * srgbToLinear(rgb);
  vec3 lmsCbrt = pow(lms, vec3(1.0 / 3.0));
  return LMS_TO_OKLAB * lmsCbrt;
}
